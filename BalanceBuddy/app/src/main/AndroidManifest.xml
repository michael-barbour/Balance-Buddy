<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chemwise.startup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.chemwise.startup.Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chemwise.startup.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chemwise.startup.Redox"
            android:label="@string/title_activity_second"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.chemwise.startup.GasLaw" />
        <activity
            android:name="com.chemwise.startup.Conversion"
            android:label="@string/title_activity_conversion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.chemwise.startup.FormulaBalancerScreen"
            android:label="@string/title_activity_formula_balancer_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.chemwise.startup.PeriodicTable"
            android:label="@string/title_activity_periodic_table"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
