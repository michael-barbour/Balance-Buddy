<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.chemwise.startup.MainActivity"
    android:padding="15dp"
    android:background="#504f4f">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:background="#504f4f">

        <Button
            android:layout_width="159dp"
            android:layout_height="100dp"
            android:text="Ideal Gas Law"
            android:id="@+id/GasButton"
            android:padding="15dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:onClick="GasLawScreen"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="159dp"
            android:layout_height="100dp"
            android:text="Conversions"
            android:id="@+id/ConversionButton"
            android:padding="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:onClick="ConversionScreen"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="159dp"
            android:layout_height="100dp"
            android:text="Standard Reduction Potential"
            android:id="@+id/ReductionPotentialButton"
            android:padding="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="3dp"
            android:onClick="RedoxReactionScreen"
            android:layout_gravity="left|bottom" />

        <Button


            android:layout_width="159dp"
            android:layout_height="101dp"
            android:text="Periodic Table"
            android:id="@+id/PeriodicTableButton"
            android:layout_gravity="left|top"
            android:gravity="left|center_vertical"
            android:textAlignment="center"
            android:onClick="PeriodicImageScreen"

            />

        <Button
            android:layout_width="159dp"
            android:layout_height="100dp"
            android:text="Formula Balancer"
            android:layout_gravity="right|top"
            android:id="@+id/formulaBalancerButton"
            android:nestedScrollingEnabled="false"
            android:onClick="BalancerScreen" />
    </FrameLayout>

</RelativeLayout>
