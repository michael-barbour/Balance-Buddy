<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chemwise.startup.Conversion"
    android:background="#bfe0e6"
    tools:showIn="@layout/activity_conversion">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        android:id="@+id/ConversionCalculateButton"
        android:clickable="false"
        android:layout_marginBottom="68dp"
        android:width="200dp"
        android:layout_gravity="center_horizontal|bottom" />

    <Spinner
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:id="@+id/CovertTO_Unit_Spinner"
        android:spinnerMode="dropdown"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="80dp" />

    <Spinner
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:id="@+id/BaseUnit_Convert_Spinner"
        android:spinnerMode="dropdown"
        android:layout_gravity="right|center_vertical" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Data_Convert_TextBox"
        android:layout_gravity="left|center_vertical"
        android:hint="Enter value here  " />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/Conversion_Menu_Title"
        android:text="Conversion Screen"
        android:layout_marginBottom="150dp"
        android:layout_gravity="left|bottom"
        android:editable="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:spinnerMode="dropdown"
        android:id="@+id/Spinner_Pick_Types"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

</FrameLayout>
